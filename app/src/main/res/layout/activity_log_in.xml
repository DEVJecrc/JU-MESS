<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#FFE2F5DD"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ju_mess.dexter.com.ju_mess.LogInActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_above="@+id/textviewDesc"
        android:layout_marginBottom="20dp"
        android:text="Welcome to \nJU Mess"
        android:textSize="40dp"
        />

    <TextView
        android:id="@+id/textviewDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textAlignment="center"
        android:layout_above="@+id/sign_in_button"
        android:layout_marginBottom="20dp"
        android:layout_marginHorizontal="20dp"
        android:text="Don't need to create an account\nPlease Login with Your \n JECRC University Google Account\n domain starts with \n \n @jecrcu.edu.in"
        />

    <com.google.android.gms.common.SignInButton
        android:layout_alignParentBottom="true"
        android:id="@+id/sign_in_button"
        android:layout_width="wrap_content"
        android:layout_marginBottom="150dp"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content" />


</RelativeLayout>
