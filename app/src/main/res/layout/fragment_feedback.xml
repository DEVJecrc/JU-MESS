<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ju_mess.dexter.com.ju_mess.FeedbackFragment">


    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Choose Your Meal Time"
            android:textAlignment="center"
            android:layout_margin="16dp"
            android:textColor="#000"
            android:textSize="30dp"
            android:layout_marginBottom="30dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="40dp"
                android:paddingTop="40dp"
                android:paddingRight="20dp"
                android:paddingBottom="20dp"
                android:layout_weight="1">
                <ImageView
                    android:id="@+id/Buttonbreakfast"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/breakfastt"
                    android:scaleType="centerCrop"
                    android:adjustViewBounds="true" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:layout_gravity="center_horizontal"
                    android:text="Breakfast"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="#000"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingBottom="20dp"
                android:paddingRight="40dp"
                android:paddingLeft="20dp"
                android:paddingTop="40dp"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/ButtonLunch"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@drawable/luncht"
                    android:layout_gravity="center_horizontal"
                    android:scaleType="centerCrop"
                    android:adjustViewBounds="true" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-medium"
                    android:text="Lunch"
                    android:textSize="14sp"
                    android:layout_gravity="center_horizontal"
                    android:textColor="#000"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="40dp"
                android:paddingTop="20dp"
                android:paddingRight="20dp"
                android:paddingBottom="40dp"
                android:layout_weight="1">
                <ImageView
                    android:id="@+id/ButtonSnacks"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/lunnert"
                    android:scaleType="centerCrop"
                    android:adjustViewBounds="true" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-medium"
                    android:layout_gravity="center_horizontal"
                    android:text="Snacks"
                    android:textSize="14sp"
                    android:textColor="#000"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingBottom="40dp"
                android:paddingRight="40dp"
                android:paddingLeft="20dp"
                android:paddingTop="20dp"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/ButtonDinner"
                    android:layout_width="64dp"
                    android:layout_height="64dp"

                    android:src="@drawable/dinnert"
                    android:layout_gravity="center_horizontal"
                    android:scaleType="centerCrop"
                    android:adjustViewBounds="true" />
                <TextView
                    android:layout_width="wrap_content"
                    android:fontFamily="sans-serif-medium"
                    android:layout_height="wrap_content"
                    android:text="Dinner"
                    android:textSize="14sp"
                    android:layout_gravity="center_horizontal"
                    android:textColor="#000"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>



</FrameLayout>
